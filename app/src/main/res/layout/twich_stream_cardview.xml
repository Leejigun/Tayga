<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="twitchModel"
            type="com.dopy.dopy.tayga.model.twich.TwitchStream"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/discord_1Black"
        app:cardCornerRadius="5dp"
        android:onClick="@{twitchModel::onStreamingClick}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tscvPreView"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gamesnapshot" />

            <TextView
                android:id="@+id/tscvStatus"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@id/bcSanpshot"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@{twitchModel.channel.status}"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tscvDispalyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bcTitle"
                android:layout_marginRight="10dp"
                android:text="@{twitchModel.channel.displayName}"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tscvCountOfViewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bcHostName"
                android:layout_gravity="top|right"
                android:layout_margin="10dp"
                android:padding="2dp"
                android:text="@{twitchModel::}"
                android:textColor="@android:color/holo_red_light" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>

