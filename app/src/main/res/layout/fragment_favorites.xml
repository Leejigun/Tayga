<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aandroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baoyz.widget.PullRefreshLayout
            android:id="@+id/refreshLayoutFavorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:refreshColor="@color/colorPrimary"
            app:refreshType="material">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/favoritFragmentViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    app:ci_animator="@animator/indicator_animator"
                    app:ci_animator_reverse="@animator/indicator_animator_reverse"
                    app:ci_drawable="@drawable/black_radius_square"
                    app:ci_height="4dp"
                    app:ci_margin="6dp"
                    app:ci_width="10dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/favoriteFragmentGameRcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/favoriteFragmentStreamRcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </com.baoyz.widget.PullRefreshLayout>

        <FrameLayout
            android:id="@+id/containerRotate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rotation_background"
            android:visibility="gone">

            <com.victor.loading.rotate.RotateLoading
                android:id="@+id/rotateFavoritesloading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:loading_color="@android:color/white"
                app:loading_speed="11"
                app:loading_width="5dp" />
        </FrameLayout>

    </FrameLayout>
</layout>