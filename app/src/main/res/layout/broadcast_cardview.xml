<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="5dp"
            app:contentPadding="5dp"
            app:cardBackgroundColor="@color/discord_light_gray">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/discord_light_gray">
                    <ImageView
                        android:id="@+id/bcSanpshot"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/gamesnapshot"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/bcTitle"
                        android:text="title of Game card View"
                        android:textColor="@android:color/white"
                        android:background="@color/textview_backgroun"
                        android:textSize="20sp"
                        android:padding="2dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/bcHostName"
                        android:text="HostName"
                        android:textColor="@android:color/white"
                        android:background="@color/textview_backgroun"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="40dp"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:padding="2dp"
                        android:id="@+id/bcCountOfViewer"
                        android:text="0 Viewer"
                        android:textColor="@android:color/holo_red_light"
                        android:background="@color/textview_backgroun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"/>
                </FrameLayout>
        </android.support.v7.widget.CardView>
</layout>