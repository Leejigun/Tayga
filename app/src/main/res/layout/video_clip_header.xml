<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="twichStraemModel"
            type="com.dopy.dopy.tayga.model.twich.TwitchStream" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvGameDetail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gameImage_height"
            android:src="@drawable/twitch_logo"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/discord_orange" />


        <LinearLayout
            android:id="@+id/aaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/discord_light_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtGameDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@{twichStraemModel.channel.status}"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_star_border_black_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtGameDetailHostName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:gravity="end"
                        android:text="@{twichStraemModel.channel.displayName}"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/txtGameDetailNumberOfViewer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:gravity="end"
                        android:text="@{twichStraemModel.ToStringViewrs()}"
                        android:textColor="@color/discord_orange" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/video_clip"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>
</layout>
