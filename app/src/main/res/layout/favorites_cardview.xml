<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="favoritesModle"
            type="com.dopy.dopy.tayga.model.broadcast.BroadcastModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/favoritesBanner"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/favoritesTitle"
                    android:gravity="end"
                    android:textSize="20sp"
                    android:hint="LoL"
                    android:textColor="@color/discord_3Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/containerFavoritesCardViewIcon"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/favoritesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/FavoritesCardViewIcon"
                        android:src="@drawable/ic_favorite_black_24dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:padding="10dp"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/discord_3Black" />
    </LinearLayout>
</layout>