<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/discord_orange</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="TaygaAppTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">@color/discord_orange</item>
        <item name="colorControlNormal">@color/discord_orange</item>
        <item name="colorPrimaryDark">@color/discord_orange</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


</resources>
